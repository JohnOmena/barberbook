<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarberBook.Web</title>
    <meta name="color-scheme" content="light" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarberBook.Web.styles.css" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body class="@(ViewData["BodyClass"] ?? string.Empty)">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark admin-navbar">
            <div id="b-fj5kgq2skh" class="container admin-shell">
                <div class="brand-header">
                    <span class="brand-logo" aria-hidden="true">
                        <img src="~/img/logo.jpg" alt="Studio Winner" />
                    </span>
                    <div class="brand-copy">
                        <span class="brand-tag">Studio Winner</span>
                        <span class="brand-title">Studio Winner Barbearia</span>
                        <span class="brand-sub">Agenda em dia</span>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <form class="d-inline" method="post" asp-page="/Admin/Index" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">Sair</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BarberBook.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




