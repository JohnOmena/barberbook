@page
@model BarberBook.Web.Pages.Admin.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Studio Winner Barbearia · Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin-login.css" asp-append-version="true" />
    <meta name="robots" content="noindex,nofollow" />
    <meta name="api-base" content="@Model.ApiBaseUrl" />
    <meta name="tenant-id" content="@Model.TenantId" />
    <link rel="icon" href="~/img/logo.jpg" />
    <noscript>Ative JavaScript para usar o painel.</noscript>
</head>
<body class="login-body">
    <div class="bg-glow"></div>
    <main class="login-card" aria-label="Autenticação do painel">
        <header class="card-header">
            <span class="logo-wrap" aria-hidden="true">
                <img src="~/img/logo.jpg" alt="Studio Winner" loading="lazy" />
            </span>
            <div class="brand">
                <h1>Studio Winner Barbearia</h1>
                <p>Painel administrativo</p>
            </div>
        </header>
        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="validation"></div>
            <div class="field">
                <label asp-for="Username">Usuário</label>
                <input asp-for="Username" autocomplete="username" />
                <span asp-validation-for="Username" class="validation"></span>
            </div>
            <div class="field">
                <label asp-for="Password">Senha</label>
                <input asp-for="Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="validation"></span>
            </div>
            <button type="submit" class="cta">Entrar</button>
        </form>
        <div class="alert @(string.IsNullOrEmpty(Model.Error) ? string.Empty : "show")" role="alert">
            <strong>Não foi possível entrar.</strong>
            <span>@Model.Error</span>
        </div>
    </main>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
