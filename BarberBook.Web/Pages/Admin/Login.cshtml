@page
@model BarberBook.Web.Pages.Admin.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BarberBook — Login</title>
    <style>
        body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; background:#0f172a; color:#e2e8f0; display:flex; align-items:center; justify-content:center; min-height:100vh; }
        .card { background:#111827; padding:24px; border-radius:12px; width:100%; max-width:360px; box-shadow:0 10px 25px rgba(0,0,0,.4); }
        h1 { margin:0 0 16px; font-size:20px; }
        label { display:block; font-size:14px; margin:12px 0 6px; }
        input[type=text], input[type=password] { width:100%; padding:10px 12px; border-radius:8px; border:1px solid #374151; background:#0b1220; color:#e2e8f0; }
        button { width:100%; padding:12px; margin-top:16px; background:#2563eb; border:none; color:#fff; border-radius:8px; font-weight:600; }
        .error { color:#fca5a5; font-size:14px; margin-top:8px; }
    </style>
    <meta name="robots" content="noindex,nofollow" />
    <meta name="color-scheme" content="dark light" />
    <partial name="_ValidationScriptsPartial" />
    <link rel="icon" href="data:," />
    <meta name="api-base" content="@Model.ApiBaseUrl" />
    <meta name="tenant-id" content="@Model.TenantId" />
    <noscript>Ative JavaScript para usar o painel.</noscript>
    </head>
<body>
    <div class="card">
        <h1>Entrar</h1>
        <form method="post">
            <label for="username">Usuário</label>
            <input id="username" name="Username" type="text" autocomplete="username" />
            <label for="password">Senha</label>
            <input id="password" name="Password" type="password" autocomplete="current-password" />
            <button type="submit">Entrar</button>
            @if (!string.IsNullOrEmpty(Model.Error)) { <div class="error">@Model.Error</div> }
        </form>
    </div>
</body>
</html>
